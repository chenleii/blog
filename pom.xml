        <spring-cloud.version>2022.0.1</spring-cloud.version>
        <spring-cloud-alibaba.version>2022.0.0.0-RC1</spring-cloud-alibaba.version>
        <aliyun-spring-boot.version>1.0.0</aliyun-spring-boot.version>

        <mybatis-plus.version>3.5.3.1</mybatis-plus.version>

        <knife4j-openapi3-jakarta.version>4.1.0</knife4j-openapi3-jakarta.version>

        <modelmapper.version>3.1.1</modelmapper.version>
        <mapstruct.version>1.5.3.Final</mapstruct.version>
        <lombok-mapstruct-binding.version>0.2.0</lombok-mapstruct-binding.version>

        <jjwt.version>0.11.5</jjwt.version>
        <java-jwt.version>4.3.0</java-jwt.version>

        <webmagic.version>0.7.6</webmagic.version>
        <flexmark.version>0.62.2</flexmark.version>

        <moneta-core.version>1.4.2</moneta-core.version>
        <jackson-datatype-money.version>1.3.0</jackson-datatype-money.version>
        <ip2region.version>2.7.0</ip2region.version>

        <commons-lang3.version>3.12.0</commons-lang3.version>
        <commons-text.version>1.10.0</commons-text.version>
        <commons-collections4.version>4.4</commons-collections4.version>
        <commons-beanutils.version>1.9.4</commons-beanutils.version>
        <commons-codec.version>1.15</commons-codec.version>
        <commons-fileupload.version>1.5</commons-fileupload.version>
        <commons-io.version>2.11.0</commons-io.version>
        <commons-net.version>3.9.0</commons-net.version>
        <commons-crypto.version>1.2.0</commons-crypto.version>
        <guava.version>31.1-jre</guava.version>
        <fastjson2.version>2.0.26</fastjson2.version>

        <testcontainers-bom.version>1.17.6</testcontainers-bom.version>
        <cucumber.version>7.11.2</cucumber.version>
        <archunit.version>1.0.1</archunit.version>
        <cucumber-reporting.version>5.7.5</cucumber-reporting.version>
    </properties>

    <modules>
        <module>blog-core</module>
        <module>blog-infrastructure</module>
        <module>blog-api</module>
        <module>blog-interface</module>
        <module>blog-configuration</module>
        <module>blog-start</module>
        <module>blog-test</module>
    </modules>

    <dependencies>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok-mapstruct-binding</artifactId>
            <version>${lombok-mapstruct-binding.version}</version>
        </dependency>

    </dependencies>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.chen.blog</groupId>
                <artifactId>blog-core</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.chen.blog</groupId>
                <artifactId>blog-core-sharedkernel</artifactId>
                <version>${project.version}</version>
